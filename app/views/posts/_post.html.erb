<li>
  <div class="row">
    <aside class="large-3 columns">
      <section class="owner">
	<%= link_to post.user.name, post.user %>
      </section>
      <section>
	<%= post.created_at.strftime("%Y年%m月%d日 %T") %>
	<br />
	<%= post.replies.count %> <%= link_to "回复", post_path(post)+"#reply" %>
	<% if current_user?(post.user)%>
	  | <%= link_to "删除", post, method: :delete, data: { confirm: "确认？", disable_with: '正在处理' }  %>
	<% end %>
      </section>
    </aside> 
    <div class="large-9 columns content">
      <section class="center post_title">
	<%= link_to_unless_current post.title, post %>
      </section>
      <section>
	<%= simple_format(post.content, style: "text-indent:50px;") %>
      </section>
    </div> 
  </div>
</li>
