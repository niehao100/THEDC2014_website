<% provide(:title, '全部公告') %>
<h1>全部公告</h1>

<div class="row">
  <div class="large-centered large-8 columns">
    <%= link_to "新建", new_admin_inform_path, class: 'button small' %>
  </div>
</div>

<div class="row">
  <div class="large-centered large-8 columns">
    <ul class="informs">
      <%= render @informs %>
    </ul>
