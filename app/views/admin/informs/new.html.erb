<% provide(:title, '发出通知') %>
<h1>发出通知</h1>
<div class="row">
  <div class="large-8 large-centered columns">
    <%= form_for([:admin, @inform]) do |f| %>
      <%= render 'shared/error_msg', object: f.object, name: "表格" %>
      <%= render 'field', f: f %>
      <div class="row">
	<div class="small-3 large-3 large-centered small-centered columns">
	  <%= f.submit "确定", class: "button", data: { disable_with: '正在处理' } %>
	</div>
      </div>
    <% end %>
  </div>
</div>
