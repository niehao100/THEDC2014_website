<%= form_for ([:admin, @reply]) do |f| %>
  <%= render 'admin/shared/error_msg', object: f.object, name: "表格" %>
  <%= f.hidden_field :post_id %>
  <%= f.text_area :content, placeholder: "回复内容" %>
  <div class="row">
    <div class="small-2 large-2 large-centered columns">
      <%= f.submit "回复", class: "button small radius" %>
    </div>
  </div>
<% end %>
